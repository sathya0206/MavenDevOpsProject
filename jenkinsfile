pipeline {
    agent any
    tools {
        jdk 'myjava'
        maven 'mymaven'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout([
                 $class: 'GitSCM',
                 branches: [[name: 'master']],
                 userRemoteConfigs: [[
                    url: 'https://github.com/sathya0206/MavenDevOpsProject.git',
                    credentialsId: '',
                 ]]
                ])
            }
        }
        stage('clone') {
            steps {
                git url: 'https://github.com/sathya0206/MavenDevOpsProject.git'
            }
        }
        stage('compile_job') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('code_review_job') {
            steps {
                sh 'mvn -P metrics pmd:pmd'
            }
        }
        stage('test_job') {
            steps {
                sh 'mvn test'
            }
        }
        stage('package_job') {
            steps{
                sh 'mvn package'
            }
        }
    }
}
